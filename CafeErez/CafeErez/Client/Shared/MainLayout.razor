@using Blazor.Flags
@using CafeErez.Shared.Infrastructure.Localization
@inherits LayoutComponentBase
@inject Microsoft.Extensions.Localization.IStringLocalizer<MainLayout> _localizer

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudRTLProvider RightToLeft="@_rightToLeft">
    <AuthorizeView>
        <NotAuthorized>
            <LoginDisplay/>
            <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
                    @Body
            </MudContainer>
       </NotAuthorized>

       <Authorized>
        <MudLayout>
            <MainBody>
                @Body
            </MainBody>
          </MudLayout>
        </Authorized>
    </AuthorizeView>
</MudRTLProvider>