@inject Microsoft.Extensions.Localization.IStringLocalizer<AddNewCustomerForDebts> _localizer
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
            @_localizer["Add Customer"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Label=@_localizer["First name"] HelperText=@_localizer["Max. 8 characters"]
                              @bind-Value="NewCustomer.FirstName" For="@(() => NewCustomer.FirstName)"/>
        <MudTextField Label=@_localizer["Last name"] HelperText=@_localizer["Max. 8 characters"]
                              @bind-Value="NewCustomer.LastName" For="@(() => NewCustomer.LastName)"/>
        <MudTextField Label=@_localizer["PhoneNumber"] HelperText=@_localizer["Max. 8 characters"]
                              @bind-Value="NewCustomer.PhoneNumber" For="@(() => NewCustomer.PhoneNumber)"/>
        <MudTextField Label=@_localizer["Pais"] HelperText=@_localizer["Max. 8 characters"]
                              @bind-Value="NewCustomer.CustomerDebts.PaisDebts" For="@(() => NewCustomer.CustomerDebts.PaisDebts)"/>
        <MudTextField Label=@_localizer["Winner"] HelperText=@_localizer["Max. 8 characters"]
                              @bind-Value="NewCustomer.CustomerDebts.WinnerDebts" For="@(() => NewCustomer.CustomerDebts.WinnerDebts)"/>
                                      <MudTextField Label=@_localizer["Store"] HelperText=@_localizer["Max. 8 characters"]
                              @bind-Value="NewCustomer.CustomerDebts.StoreDebts" For="@(() => NewCustomer.CustomerDebts.StoreDebts)"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@_localizer["Cancel"]</MudButton>
        <MudButton Color="Color.Success" Variant="Variant.Filled" OnClick="Submit">@_localizer["Add"]</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public Customer NewCustomer { get; set; }

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(NewCustomer));
    }
    void Cancel() => MudDialog.Cancel();
}