@using CafeErez.Shared.Constants
<MudNavMenu>
    <MudNavLink Href="/CustomerDiary" Icon="@Icons.Material.Outlined.Home">
        Home
    </MudNavLink>
    <MudNavGroup Icon="@Icons.Material.Outlined.Score" Title="Winner" Expanded="true">
        <MudStack Class="pa-2" Row="true" Justify="Justify.Center">
            <MudAvatar Image="images/WinnerHome.jpg"></MudAvatar>
            <MudButton FullWidth="true" @onclick="() => DirectTo(Winner)">Winner</MudButton>
        </MudStack>
        <MudStack Class="pa-2" Row="true" Justify="Justify.Center">
            <MudAvatar Image="images/soccer_ball.jpg"></MudAvatar>
            <MudButton FullWidth="true" @onclick="() => DirectTo(SportResults)">Sport results</MudButton>
        </MudStack>

    </MudNavGroup>
    <MudNavGroup Icon="@Icons.Material.Outlined.Games"  Title="Pais" Expanded="true">
        <MudStack Class="pa-2" Row="true" Justify="Justify.Center">
           <MudAvatar Size=Size.Medium Image="images/PaisHome.jpg"></MudAvatar>
           <MudButton FullWidth="true" @onclick="() => DirectTo(LottoResult)">Lotto result</MudButton>
        </MudStack>
        <MudStack Class="pa-2" Row="true">
           <MudAvatar Size=Size.Medium Image="images/123Pais.jpg"></MudAvatar>
           <MudButton FullWidth="true" @onclick="() => DirectTo(Pais123Result)">123 result</MudButton>
        </MudStack>
        <MudStack Class="pa-2" Row="true" >
           <MudAvatar Size=Size.Medium Image="images/777Pais.jpg"></MudAvatar>
           <MudButton FullWidth="true" @onclick="() => DirectTo(Pais777Result)">777 result</MudButton>
        </MudStack>
        <MudStack Class="pa-2" Row="true">
           <MudAvatar Size=Size.Medium Image="images/ChancePais.jpg"></MudAvatar>
           <MudButton FullWidth="true" @onclick="() => DirectTo(ChanceResult)">Chance result</MudButton>
        </MudStack>
    </MudNavGroup>
   <AuthorizeView Roles=@Constants.Roles.AdministratorRole>
        <MudListSubheader Class="mt-2 mb-n2">Administrator</MudListSubheader>
        <MudNavLink Href="/identity/users" Icon="@Icons.Material.Outlined.Person">
            Users
        </MudNavLink>
        <MudNavLink Href="/identity/Roles" Icon="@Icons.Material.Outlined.Person">
            Roles
        </MudNavLink>
        <MudListSubheader Class="mt-2 mb-n2">Catalog Managment</MudListSubheader>
        <MudNavLink Href="/Catalog/Products" Icon="@Icons.Material.Outlined.Category">
            Products
        </MudNavLink>
   </AuthorizeView>
</MudNavMenu>